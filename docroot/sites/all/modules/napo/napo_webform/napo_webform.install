<?php

/**
 * Set napo_webform's string localization enabled.
 */
function napo_webform_update_7001() {
  db_insert('webform_localization')
    ->fields(array(
        'nid' => 255,
        'expose_strings' => 1,
        'single_webform' => 0,
        'sync_components' => 0,
        'sync_roles' => 0,
        'sync_emails' => 0,
        'webform_properties' => '',
    ))
    ->execute();
}
